public class Solution {
    public int findPeakElement(int[] num) {
        int len = num.length;  
        if (len == 1)  
            return 0;  
        if (num[0] > num[1])             //最左  
            return 0;  
        if (num[len - 1] > num[len - 2]) //最右  
            return len - 1;  
        int i = 1;  
        for (; i < len - 1; i++) {  
            if (num[i] > num[i - 1] && num[i] > num[i + 1])  
                break;  
        }  
        return i;  
     }  
}

